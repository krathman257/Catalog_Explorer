<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Base-->
    <style name="base">
        <item name="android:textColor">#AA000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/veterantypewriter</item>
    </style>
    <!--Headers-->
    <style name="header_1" parent="base">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="header_2" parent="base">
        <item name="android:textSize">28sp</item>
    </style>

    <!--Results-->
    <style name="result" parent="base">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="result_sub" parent="base">
        <item name="android:textColor">#77000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Content-->
    <style name="content_2" parent="base">
        <item name="android:textSize">40sp</item>
    </style>

    <!--Buttons-->
    <style name="button" parent="base">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/buttonColor</item>
    </style>

    <!--Spinners-->
    <style name="spinnerTextViewItem" parent="base">
        <item name="android:textSize">20sp</item>
    </style>
</resources>